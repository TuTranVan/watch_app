<header>
  <div class="header" id="home">
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
      <div class="collapse navbar-collapse text-center" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to root_path do %>
              <%= image_tag("l.png", width: "60px") %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "TRANG CHỦ",root_path, class: "nav-link cool" %>
          </li>
          <li class="nav-item">
            <%= link_to "GIỚI THIỆU",root_path, class: "nav-link cool" %>
          </li>
          <li class="nav-item">
            <%= render "layouts/search" %>
          </li>
          <li class="nav-item cart">
            <%= link_to carts_path, class: "nav-link cool" do %>
              <i class="fa fa-shopping-bag"> Giỏ hàng</i>
              <span class="badge badge-light"><%= cart.count %></span>
            <% end %>
          </li>
          <% if logged_in? %>
            <li class="dropdown nav-item">
              <a href="#" class="dropdown-toggle nav-link cool" data-toggle="dropdown">
                <%= current_user.ten %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% if current_user.admin? %>
                  <li><%= link_to "Quản trị hệ thống",admin_root_path %></li>
                <% else %>
                  <li><%= link_to "Trang cá nhân", current_user %></li>
                <% end %>
                <li><%= link_to "Cập nhật thông tin", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "Đăng xuất", logout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to login_path, class: "nav-link cool" do %>
                ĐĂNG NHẬP
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
