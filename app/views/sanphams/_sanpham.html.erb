<div class="col-md-3 col-sm-6">
  <div class="product-grid6">
    <div class="product-image6">
      <%= link_to sanpham do %>
        <%= image_tag sanpham.hinhanh_url.to_s, class: "pic-1" %>
      <% end %>
    </div>
    <div class="product-content">
      <h3 class="title"><a href="#"><%= sanpham.ten %></a></h3>
      <div class="price">
        <%= number_with_delimiter(sanpham.dongia, delimiter: ".") %>
        <sup style="text-transform: lowercase;">đ</sup>
      </div>
      <div><%= sanpham.thuonghieu %></div>
      <div class="rating">
        <div class="stars">
          <% 5.times do  %>
            <span class="fa fa-star checked"></span>
          <% end %>
        </div>
      </div>
    </div>
    <ul class="social">
      <li>
        <%= link_to add_to_cart_cart_path(sanpham), "data-tip": "Thêm vào giỏ hàng" do %>
          <i class="fa fa-shopping-bag"></i>
        <% end %>
      </li>
    </ul>
  </div>
</div>
