<% provide :title, "Sản phẩm" %>
<%= render "admin/static_pages/layout" %>
  <content class="col-md-10 content">
    <div class="col-md-5">
      <%= image_tag @sanpham.hinhanh_url.to_s, class: "img-book" %>
    </div>
    <div class="col-md-7">
      <table class="table table-striped table-bordered table-list">
        <thead>
          <tr>
            <th><em class="fa fa-cog"></em></th>
            <th>
              <%= link_to edit_admin_sanpham_path(@sanpham), class: "btn btn-default" do %>
                <em class="fa fa-pencil"></em>
              <% end %>
              <!-- Button trigger modal -->
              <% if current_user.warehouse?%>
                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#majors">
                  Nhập hàng
                </button>
              <% end %>
              <!-- Modal -->
              <div class="modal fade" id="majors" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalCenterTitle"><b><%= @sanpham.ten %></b></h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <%= render "admin/nhaphangs/form" %>
                    </div>
                  </div>
                </div>
              </div>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Tên sản phẩm</td>
            <td><%= @sanpham.ten %></td>
          </tr>
          <tr>
            <td>Loại</td>
            <td><%= @sanpham.loaisp_ten %></td>
          </tr>
          <tr>
            <td>Thương hiệu</td>
            <td><%= @sanpham.thuonghieu %></td>
          </tr>
          <tr>
            <td>Xuất sứ</td>
            <td><%= @sanpham.xuatsu %></td>
          </tr>
          <tr>
            <td>Màu sắc</td>
            <td><%= @sanpham.mausac %></td>
          </tr>
          <tr>
            <td>Bảo hành</td>
            <td><%= @sanpham.baohanh %></td>
          </tr>
          <tr>
            <td>Số lượng</td>
            <td><%= @sanpham.soluong %></td>
          </tr>
          <tr>
            <td>Đơn giá</td>
            <td><%= @sanpham.dongia %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </content>
</div>
