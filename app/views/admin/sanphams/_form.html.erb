<%= form_for [:admin, @sanpham] do |f| %>
  <%= render "shared/error_messages", object: @sanpham%>

  <div class="form-group">
    <%= f.select(:loaisp_id, select_category,
    {:include_blank => "Loại sản phẩm"},{class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= f.text_field :ten, class: "form-control", placeholder: "Tên" %>
  </div>

  <div class="form-group">
    <%= f.text_field :thuonghieu, class: "form-control", placeholder: "Thương hiệu" %>
  </div>

  <div class="form-group">
    <%= f.text_field :mausac, class: "form-control", placeholder: "Màu sắc" %>
  </div>

  <div class="form-group">
    <%= f.text_field :xuatsu, class: "form-control", placeholder: "Xuất sứ"   %>
  </div>

  <div class="form-group">
    <%= f.text_field :baohanh, class: "form-control", placeholder: "Bảo hành"   %>
  </div>

  <div class="form-group">
    <%= f.number_field :soluong, class: "form-control", placeholder: "Số lượng", min: 1 %>
  </div>

  <div class="form-group">
    <%= f.number_field :dongia, class: "form-control", placeholder: "Đơn giá", min: 1 %>
  </div>

  <div class="form-group">
    <%= f.label "Hình ảnh", class: "control-label" %>
    <%= f.file_field :hinhanh, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>
