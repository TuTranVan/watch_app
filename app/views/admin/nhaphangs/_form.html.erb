<%= form_for [:admin, current_user.nhaphangs.build] do |f| %>

  <%= f.hidden_field :masp, value: @sanpham.id %>

  <div class="form-group">
    <%= f.number_field :soluong, class: "form-control", placeholder: "Số lượng", min: 1 %>
  </div>

  <div class="form-group">
    <%= f.submit "Nhập hàng", class: "btn btn-primary" %>
  </div>
<% end %>
