<%= form_for [:admin, @user] do |f| %>
  <%= render "shared/error_messages", object: @user%>

  <div class="form-group">
    <%= f.text_field :ten, class: "form-control", placeholder: "Tên", required: true %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Email", required: true %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Mật khẩu" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control",
    placeholder: "Nhập lại mật khẩu" %>
  </div>

  <div class="form-group">
    <%= f.text_field :sdt, class: "form-control", placeholder: "Số điện thoại" %>
  </div>

  <div class="form-group">
    <%= f.text_field :diachi, class: "form-control", placeholder: "Địa chỉ" %>
  </div>

  <div class="form-group">
    <%= f.label "Loại người dùng" %>
    <%= f.select(:role, select_role, {},{class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>
