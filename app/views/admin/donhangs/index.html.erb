<% provide :title, "Yêu cầu mượn sách" %>
<%= render "admin/static_pages/layout" %>
  <content class="col-md-10 content">
    <div class="col-md-12">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-md-6">
              <h3 class="panel-title"><b>Yêu cầu mượn sách</b></h3>
            </div>
            <div class="col col-md-6">
              <%= render "filter" %>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
              <tr>
                <th><em class="fa fa-cog"></em></th>
                <th>ID</th>
                <th>Người mượn</th>
                <th>Ngày mượn</th>
                <th>Ngày trả</th>
                <th>Ngày thực trả</th>
                <th>Tiền phạt</th>
                <th>Tình trạng</th>
              </tr>
            </thead>
            <tbody>
              <%= render @requests %>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate %>
    </div>
  </content>
</div>
