<% provide :title, @donhang.user.ten %>
<%= render "admin/static_pages/layout" %>
  <content class="col-md-10 content">
    <div class="col-md-4">
      <ul>
        <p>Người đặt: <b><%= @donhang.user.ten %></b></p><hr>
        <p>Số điện thoại: <b><%= @donhang.user.sdt %></b></p><hr>
        <p>Ngày đặt: <b><%= @donhang.ngaydat %></b></p><hr>
      </ul>
      <% if @donhang.diachinhan? %>
        <ul>
          <p>Người nhận hàng: <b><%= @donhang.nguoinhans.first.hoten %></b></p><hr>
          <p>Địa chỉ: <b><%= @donhang.nguoinhans.first.diachi %></b></p><hr>
          <p>Số điện thoại: <b><%= @donhang.nguoinhans.first.sdt %></b></p><hr>
        </ul>
      <% end %>
      <div>
        <% if @donhang.ordering? %>
          <%= link_to confirm_admin_donhang_path(@donhang), class: "btn btn-primary" do %>
            <%= t "status_request.#{@donhang.trangthai}" %>
          <% end %>
        <% end %>
        <% if @donhang.shiping? %>
          <%= link_to finish_admin_donhang_path(@donhang), class: "btn btn-success" do %>
            <%= t "status_request.#{@donhang.trangthai}" %>
          <% end %>
        <% end %>
        <% if @donhang.finish? %>
          <%= link_to "#", class: "btn btn-warning" do %>
            <%= t "status_request.#{@donhang.trangthai}" %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <table class="table table-striped table-bordered table-list">
        <thead>
          <tr>
            <th>Hình ảnh</th>
            <th>Tên sản phẩm</th>
            <th>Thương hiệu</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
          </tr>
        </thead>
        <tbody>
          <%= render @donhang.chitietdhs %>
        </tbody>
      </table>
    </div>
  </content>
</div>
