<% provide(:title, "Đăng nhập") %>
<div class="row" id="session">
  <div class="login-block">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 login-sec">
          <h2 class="text-center">Đăng nhập</h2>
          <%= form_for(:session, url: login_path, :class => "login-form") do |f| %>
            <div class="form-group">
              <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
            <div class="form-check">
              <%= link_to "Đăng ký!", signup_path %>
              <%= f.submit "ĐĂNG NHẬP", class: "btn btn-login float-right" %>
            </div>
          <% end %>
          <div class="copy-text">
            Created with <i class="fa fa-heart"></i> by
            <a href="#">Vintown.inc</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
