<% provide :title, current_user.ten %>
<div class="container margin-top">
  <div class="row">
    <h3><b><%= current_user.ten %></b></h3><hr>
  </div>
  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <i class="glyphicon glyphicon-map-marker"></i>
        <span class="nav-label"><%= current_user.diachi %></span>
      </div>
      <div class="form-group">
        <i class="glyphicon glyphicon-envelope"></i>
        <span class="nav-label"><%= current_user.email %></span>
      </div>
      <div class="form-group">
        <i class="glyphicon glyphicon-phone"></i>
        <span class="nav-label"><%= current_user.sdt %></span>
      </div>
    </div>
    <div class="col-md-9">
      <table class="table table-striped table-bordered table-list">
        <thead>
          <tr>
            <th class="text-center"><em class="fa fa-cog"></em></th>
            <th>ID</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
          </tr>
        </thead>
        <tbody>
          <%= render current_user.donhangs %>
        </tbody>
      </table>
    </div>
</div>
