<%= form_for (@user), url: yield(:url), :class => "login-form"  do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Tên" %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Mật khẩu" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Nhập lại mật khẩu" %>
  </div>

  <div class="form-group">
    <%= f.text_field :phone, class: "form-control", placeholder: "Số điện thoại" %>
  </div>

  <div class="form-group">
    <%= f.text_field :address, class: "form-control", placeholder: "Địa chỉ" %>
  </div>

  <div class="form-check">
    <%= f.submit yield(:button_text), class: "btn btn-signup" %>
  </div>
<% end %>
